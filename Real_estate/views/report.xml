<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <template id="report_offer">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Offer Details</h2>
                        <p>This offer's price is<span t-field="o.status"/>
                        <span t-field="o.name"/>
                        <span t-field="o.price"/>
                    </p>
                </div>
            </t>
        </t>
    </t>
</template>
</odoo>